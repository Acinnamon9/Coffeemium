generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]
  cart          Cart?
  orders        Order[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?   @db.Text
  access_token      String?   @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?   @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id            String         @id @default(uuid())
  name          String
  basePrice     Float
  description   String
  image         String
  // relation to the join table
  productRoasts ProductRoast[]
  // New: One-to-one relation to ProductDetail
  detail        ProductDetail?
  cartItems     CartItem[]
  orderItems    OrderItem[]
  stock         Int            @default(0)
}

model Roast {
  id                String   @id @default(uuid())
  name              String
  roastLevel        Int?
  // default multiplier at the canonical roast level (optional)
  defaultMultiplier Float?
  productRoasts     ProductRoast[]
  cartItems         CartItem[]
  orderItems        OrderItem[]
}

// Grind options offered at checkout (matches existing DB migration)
model GrindOption {
  id        String  @id @default(uuid())
  name      String
  extraCost Float
  cartItems CartItem[]
  orderItems OrderItem[]
}



model ProductRoast {
  id              String   @id @default(uuid())
  productId       String
  roastId         String
  // product-specific values (optional)
  roastMultiplier Float?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  roast   Roast   @relation(fields: [roastId], references: [id], onDelete: Cascade)

  @@unique([productId, roastId])
}

// New: Model for detailed product descriptions
model ProductDetail {
  id              String  @id @default(uuid())
  productId       String  @unique // Ensure one-to-one
  fullDescription String  @db.Text // Use @db.Text for potentially long descriptions

  product Product @relation(fields:[productId], references:[id], onDelete:Cascade)
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]
}

model CartItem {
  id            String      @id @default(uuid())
  cartId        String
  productId     String
  roastId       String?
  grindOptionId String?
  quantity      Int
  priceAtAddition Float // Storing the price at the time of addition

  cart        Cart        @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  roast       Roast?      @relation(fields: [roastId], references: [id], onDelete: Cascade)
  grindOption GrindOption? @relation(fields: [grindOptionId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId, roastId, grindOptionId])
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  status      String      @default("PENDING")
  totalPrice  Float
  address     String
  phone       String
  notes       String?
  createdAt   DateTime    @default(now())
  items       OrderItem[]
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  quantity      Int
  basePrice     Float
  roastId       String?
  grindOptionId String?

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  roast       Roast?      @relation(fields: [roastId], references: [id], onDelete: Cascade)
  grindOption GrindOption? @relation(fields: [grindOptionId], references: [id], onDelete: Cascade)

  @@unique([orderId, productId, roastId, grindOptionId])
}

